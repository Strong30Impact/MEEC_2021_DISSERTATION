<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SignUpFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Activitys.LoginActivity">

        <ImageView
            android:id="@+id/signup_iv_hvac"
            android:layout_width="309dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/omninav"
            app:tint="@color/black"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signup_et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/signin_btn"
                android:ems="10"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorSigninSignup"
                tools:ignore="TouchTargetSizeCheck"
                android:autofillHints="" />

            <EditText
                android:id="@+id/signup_et_surname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/signin_btn"
                android:ems="10"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorSigninSignup"
                tools:ignore="TouchTargetSizeCheck"
                android:autofillHints="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/signup_rb_job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/signup_rb_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/signin_btn"
                        android:buttonTint="#000000"
                        android:checked="true"
                        android:ems="10"
                        android:paddingStart="10dp"
                        android:text="Doctor"
                        android:textColorHint="@color/colorSigninSignup"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/signup_rb_nurse"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/signin_btn"
                        android:buttonTint="#000000"
                        android:paddingStart="10dp"
                        android:text="Nurse"
                        android:textColorHint="@color/colorSigninSignup"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>

            </LinearLayout>

            <EditText
                android:id="@+id/signup_et_certificate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/signin_btn"
                android:ems="10"
                android:hint="Professional Certificate Number"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorSigninSignup"
                tools:ignore="TouchTargetSizeCheck"
                android:autofillHints="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/signup_btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/signin_btn"
                    android:backgroundTint="@color/black"
                    android:text="NEXT"
                    android:textColor="@color/textSecundaryColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="200dp"
                    android:text="DO HAVE AN ACCOUNT?"
                    android:textColor="@color/textSecundaryColor"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/login_tv_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Login"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>รง

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>